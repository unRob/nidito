<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.nomad.daemon</string>
    <key>UserName</key>
    <string>{{ nomad_user }}</string>
    <key>GroupName</key>
    <string>{{ nomad_group }}</string>
    <key>Disabled</key>
    <false/>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>{{ nomad_log_path }}/out.log</string>
    <key>StandardErrorPath</key>
    <string>{{ nomad_log_path }}/error.log</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/nomad</string>
        <string>agent</string>
        <string>-config</string>
        <string>{{ nomad_config_dir  }}</string>
    </array>
</dict>
</plist>
