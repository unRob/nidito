<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>io.nomad.daemon</string>
    <key>UserName</key>
    <string>{{ nomad.user }}</string>
    <key>GroupName</key>
    <string>{{ nomad.group }}</string>
    <key>Disabled</key>
    <false/>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>{{ nomad.logs }}/out.log</string>
    <key>StandardErrorPath</key>
    <string>{{ nomad.logs }}/error.log</string>
    <key>ProgramArguments</key>
    <array>
        <string>{{ nomad.bin }}</string>
        <string>agent</string>
        <string>-config</string>
        <string>{{ nomad.config }}</string>
    </array>
</dict>
</plist>
